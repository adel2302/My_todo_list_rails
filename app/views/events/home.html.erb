<h1>My todo list rails</h1>
<%= form_tag "/events/home", method: "post" do %>
  <p>Date:<input type="text" name="date" placeholder="18/10/2015"/></p>
  <p>Heure:<input type="text" name="time" placeholder="14h20"/></p>
  <p>Titre:<input type="text" name="title" placeholder="titre"/></p>
  <p>Evènement:<input type="text" name="content" placeholder="évènement"/></p>
  <input type="submit" value="Valider"/>
<% end %>

<h1>A faire</h1>
<% @events.each do |event| %>
  <p><%= event.date %> <%= event.time %></p>
  <p><%= event.title %></p>
  <p><%= event.content %></p>
<% end %>

